###############################################
# RAG Service environment sample
# Copy to .env (do not commit secrets).
###############################################

# --- Gemini LLM (Query Understanding + /analyze) ---
GEMINI_API_KEY=replace-with-your-key
QU_MODEL=gemini-1.5-flash
USE_LLM_QU=true
LLM_DEBUG=false
LLM_LOG_SLICE=4000

# --- Embeddings / Vector store ---
EMBEDDING_MODEL=keepitreal/vietnamese-sbert
# CHROMA_PATH=/data/chroma

# --- RAG runtime defaults ---
RAG_HOST=0.0.0.0
RAG_PORT=5001

# --- Database (rag-service tooling) ---
DB_HOST=mysql
DB_PORT=3306
DB_NAME=laws
DB_USER=app
DB_PASS=app
