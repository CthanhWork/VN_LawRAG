# Database
DB_HOST=mysql
DB_PORT=3306
DB_NAME=laws
DB_USER=app
DB_PASS=app

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# RAG service
RAG_HOST=0.0.0.0
RAG_PORT=5001

# Gemini LLM (replace with your own API key)
GEMINI_API_KEY=your-gemini-api-key
QU_MODEL=gemini-1.5-flash
USE_LLM_QU=true
LLM_DEBUG=false
LLM_LOG_SLICE=4000
EMBEDDING_MODEL=keepitreal/vietnamese-sbert

# CORS (update origins if you use a different UI host/port)
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true

# SMTP for OTP/email (fill with your provider)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-smtp-password
MAIL_FROM=your-email@example.com
MAIL_FROM_NAME="VNLaw OTP"
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true

# Cloudinary media storage (social-service uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_FOLDER=vn-law/social
